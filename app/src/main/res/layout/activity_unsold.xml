<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_refresh_layout_seller"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView19">

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ListView
        android:id="@+id/unsoldItemsS"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:divider="?attr/actionModeBackground" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="INVENTORY"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textStyle="bold" />



    <Button
        android:id="@+id/button2"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backarrow"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/swipe_refresh_layout_seller"
        android:layout_alignParentLeft="true"
        android:onClick="goHomeU"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/swipe_refresh_layout_seller"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="refreshInventory"
        android:background="@drawable/refresh" />
</RelativeLayout>